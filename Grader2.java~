import java.util.Scanner;

class Grader2 {
  public static void main(String[] args) {
    Scanner scanner = new Scanner(System.in);
    System.out.print("How many different types of assignments? ");
    int types = scanner.nextInt();
    String[] categories = new String[types];
    for (int i = 0; i < types; i++) {
      System.out.print("What is the name of the type of assignments? ");
      categories[i] = scanner.next();
    }
    double[][] data = new double[types][2];
    for (int i = 0; i < types; i++) {
      System.out.print("How much are " + categories[i] + " assignments worth (as a percent)? ");
      data[i][0] = scanner.nextDouble() / 100;
    }
    int assignments;
    for (int i = 0; i < types; i++) {
      System.out.print("How many " + categories[i] + " assignments were there? ");
      assignments = scanner.nextInt();
      double[] grades = new double[assignments];
      for (int j = 0; j < assignments; j++) {
        System.out.print("What was one of the grades (as a percent)? ");
        grades[j] = scanner.nextDouble();
      }
      data[i][1] = average(grades);
    }
    for (int i = 0; i < types; i++) System.out.println("Average " + categories[i] + " grade: " + data[i][1] + "%");
    double finalgrade = weightedaverage(data);
    String letter;
    if (finalgrade >= 98) letter = "A+";
    else if (finalgrade >= 93) letter = "A";
    else if (finalgrade >= 90) letter = "A-";
    else if (finalgrade >= 87) letter = "B+";
    else if (finalgrade >= 83) letter = "B";
    else if (finalgrade >= 80) letter = "B-";
    else if (finalgrade >= 77) letter = "C+";
    else if (finalgrade >= 73) letter = "C";
    else if (finalgrade >= 70) letter = "C-";
    else if (finalgrade >= 60) letter = "D";
    else letter = "E";
    System.out.println("Final grade: " + finalgrade + "% (" + letter + ")");
  }
  private static double average(double[] values) {
    double sum = 0;
    for (int i = 0; i < values.length; i++) sum += values[i];
    return sum / values.length;
  }
  private static double weightedaverage(double[][] data) {
    double sum = 0;
    for (int i = 0; i < data.length; i++) sum += data[i][0] * data[i][1];
    return sum;
  }
}
